      case 6:
        std::cout << "Spiderman rips Paper. You win!\n";
      break;
      case 7:
        std::cout << "Paper delays Batman. Computer wins!\n";
      break;
      case 8:
        std::cout << "Wizard burns Paper. Computer wins!\n";
      break;
      case 9:
        std::cout << "Paper jams Glock. Computer wins!\n";
      break;
    }
  }
  if(computer == 3)
  {
    switch(user){
      case 1:
        std::cout << "Rock breaks Scissors. You win!\n";
      break;
      case 2:
        std::cout << "Scissors cuts Paper. Computer wins!\n";
      break;
      case 3:
        std::cout << "Scissors vs Scissors. Its a draw.\n";
      break;
      case 4:
        std::cout << "Scissors decapitate Lizard. Computer wins!\n";
      break;
      case 5:
        std::cout << "Spock smashes Scissors. You win!\n";
      break;
      case 6:
        std::cout << "Scissors cut Spiderman. Computer wins!\n";
      break;
      case 7:
        std::cout << "Batman dismantles Scissors. You win!\n";
      break;
      case 8:
        std::cout << "Scissors cut Wizard. Computer wins!\n";
      break;
      case 9:
        std::cout << "Glock dents Scissors. You win!\n";
      break;
    }
  }
  if(computer == 4)
  {
    switch(user){
      case 1:
        std::cout << "Rock crushes Lizard. You win!\n";
      break;
      case 2:
        std::cout << "Lizard eats Paper. Computer wins!\n";
      break;
      case 3:
        std::cout << "Scissors decapitate Lizard. You win!\n";
      break;
      case 4:
        std::cout << "Lizard vs Lizard. Its a draw\n";
      break;
      case 5:
        std::cout << "Lizard poisons Spock. Computer wins!\n";
      break;
      case 6:
        std::cout << "Spiderman defeats Lizard. You win!\n";
      break;
      case 7:
        std::cout << "Lizard confuses Batman. (Because he looks like Killer Croc) Computer wins!\n";
      break;
      case 8:
        std::cout << "Wizard transforms Lizard. You win!\n";
      break;
      case 9:
        std::cout << "Lizard is too small for Glock. Computer wins!\n";
      break;
    }
  }
  if(computer == 5)
  {
    switch(user){
      case 1:
        std::cout << "Spock vaporizes Rock. Computer wins!\n";
      break;
      case 2:
        std::cout << "Paper disproves Spock. You win!\n";
      break;
      case 3:
        std::cout << "Spock smashes Scissors. Computer wins!\n";
      break;
      case 4:
        std::cout << "Lizard poisons Spock. You win!\n";
      break;
      case 5:
        std::cout << "Spock vs Spock. Its a draw.\n";
      break;
      case 6:
        std::cout << "Spock befuddles Spiderman. Computer wins!\n";
      break;
      case 7:
        std::cout << "Batman hangs Spock. You win!\n";
      break;
      case 8:
        std::cout << "Spock zaps Wizard. Computer wins!\n";
      break;
      case 9:
        std::cout << "Glock shoots Spock. You win!\n";
      break;
    }
  }
  if(computer == 6)
  {
    switch(user){
      case 1:
        std::cout << "Rock knocks out Spiderman. You win!\n";
      break;
      case 2:
        std::cout << "Spiderman rips Paper. Computer wins!\n";
      break;
      case 3:
        std::cout << "Scissors cut Spiderman. You win!\n";
      break;
      case 4:
        std::cout << "Spiderman defeats Lizard. Computer wins!\n";
      break;
      case 5:
        std::cout << "Spock befuddles Spiderman. You win!\n";
      break;
      case 6:
        std::cout << "Spiderman vs Spiderman. its a draw.\n";
      break;
      case 7:
        std::cout << "Batman scares Spiderman. You win!\n";
      break;
      case 8:
        std::cout << "Spiderman annoys Wizard. Computer wins!\n";
      break;
      case 9:
        std::cout << "Spiderman disarms Glock. Computer wins!\n";
      break;
    }
  }
  if(computer == 7)
  {
    switch(user){
      case 1:
        std::cout << "Batman explodes Rock. Computer wins!\n";
      break;
      case 2:
        std::cout << "Paper delays Batman. You win!\n";
      break;
      case 3:
        std::cout << "Batman dismantles Scissors. Computer wins\n";
      break;
      case 4:
        std::cout << "Lizard confuses Batman (Because he looks like Killer Croc.) You win!\n";
      break;
      case 5:
        std::cout << "Batman hangs Spock. Computer wins!\n";
      break;
      case 6:
        std::cout << "Batman scares Spiderman. Computer wins!\n";
      break;
      case 7:
        std::cout << "Batman vs Batman. Its a draw.\n";
      break;
      case 8:
        std::cout << "Wizard stuns Batman. You win!\n";
      break;
      case 9:
        std::cout << "Glock kills Batmans Mom. You win!\n";
      break;
    }
  }
  if(computer == 8)
  {
    switch(user){
      case 1:
        std::cout << "Rock interrupts Wizard. You win!\n";
      break;
      case 2:
        std::cout << "Wizard burns Paper. Computer wins!\n";
      break;
      case 3:
        std::cout << "Scissors cut Wizard. You win!\n";
      break;
      case 4:
        std::cout << "Wizard transforms Lizard. Computer wins!\n";
      break;
      case 5:
        std::cout << "Spock zaps Wizard. You win!\n";
      break;
      case 6:
        std::cout << "Spiderman annoys Wizard. You win!\n";
      break;
      case 7:
        std::cout << "Wizard stuns Batman. Computer wins!\n";
      break;
      case 8:
        std::cout << "Wizard vs Wizard. Its a draw.\n";
      break;
      case 9:
        std::cout << "Wizard melts Glock. Computer wins!\n";
      break;
    }
  }
  if(computer == 9)
  {
    switch(user){
      case 1:
        std::cout << "Glock breaks rock. Computer wins!\n";
      break;
      case 2:
        std::cout << "Paper jams Glock. You win!\n";
      break;
      case 3:
        std::cout << "Glock dents Scissors. Computer wins!\n";
      break;
      case 4:
        std::cout << "Lizard is too small for Glock. You win!\n";
      break;
      case 5:
        std::cout << "Glock shoots Spock.\n";
      break;
      case 6:
        std::cout << "Spiderman disarms Glock. You win!\n";
      break;
      case 7:
        std::cout << "Glock shoots Batman's Mom. Computer wins!\n";
      break;
      case 8:
        std::cout << "Wizard melts Glock. You win!\n";
      break;
      case 9:
        std::cout << "Glock vs Glock. Its a draw.\n";
      break;
    }
  }

}

