
#include <iostream>
#include <stdlib.h>

  //program to duel against the computer and determine the winner
  //in an epic match of the fate determining game of
  //"Rock, Paper, Scissors, Lizard, Spock
  //Spiderman, Batman, Wizard, Glock"
  //Full credit to the originators of this concept
  //starting with Sam Kass, Karen Bryla and later
  //The guy who added everything else aka Brian Yan
  //his flow chart was instrumental in the creation of this program.


int main() {

  srand(time(NULL));

  int computer = rand() % 9 + 1;
  int user = 0;

  std::cout << "=^..^=   =^..^=   =^..^=    =^..^=    =^..^= \n";
  std::cout << "                Lets Play!                   \n";
  std::cout << "    Rock, Paper, Scissors, Lizard, Spock,    \n";
  std::cout << "      Spiderman, Batman, Wizard, Glock.      \n";
  std::cout << "=^..^=   =^..^=   =^..^=    =^..^=    =^..^= \n";

  std::cout << "1) Rock\n";
  std::cout << "2) Paper\n";
  std::cout << "3) Scissors\n";
  std::cout << "4) Lizard\n";
  std::cout << "5) Spock\n";
  std::cout << "6) Spiderman\n";
  std::cout << "7) Batman\n";
  std::cout << "8) Wizard\n";
  std::cout << "9) Glock\n\n";
  std::cout << "Make your choice\n";
  std::cin >> user;

  if(computer == 1)
  {
    switch(user){
      case 1:
        std::cout << "Rock vs Rock. Its a draw\n";
      break;
      case 2:
        std::cout << "Paper covers Rock. You win!\n";
      break;
      case 3:
        std::cout << "Rock Smashes Scissors. Computer wins!\n";
      break;
      case 4:
        std::cout << "Rock crushes lizard. Computer wins!\n";
      break;
      case 5:
        std::cout << "Spock vaporizes rock. You win!\n";
      break;
      case 6:
        std::cout << "Rock knocks out Spiderman. Computer wins\n";
      break;
      case 7:
        std::cout << "Batman explodes rock. You win!\n";
      break;
      case 8:
        std::cout << "Rock interrupts Wizard. Computer wins!\n";
      break;
      case 9:
        std::cout << "Glock breaks Rock. You win!\n";
      break;

    }
  }
  if(computer == 2)
  {
    switch(user){
      case 1:
        std::cout << "Paper covers Rock. Computer wins!\n";
      break;
      case 2:
        std::cout << "Paper vs Paper. Its a draw\n";
      break;
      case 3:
        std::cout << "Scissors cut Paper. You win!\n";
      break;
